{
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
    },
    "rules": {
      "indent": ["error", 2],
      "linebreak-style": 0,
      "semi": ["error", "always"]
    }
}